    <script defer src="https://use.fontawesome.com/releases/v5.8.1/js/all.js"
        integrity="sha384-g5uSoOSBd7KkhAMlnQILrecXvzst9TdC09/VM+pjDTCM+1il8RHz5fKANTFFb+gQ"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="/scripts/default.js"></script>
</head>
<body>
<header>
    <h1 id="header_title">Cub Scout Pack 306</h1>
    <h2 id="sub-head">"Do your best"</h2>
    <menu>
        <menuitem>
            <a href="/index.md"><i class="fas fa-home"></i> Home</a>
        </menuitem>
        <menuitem>
            <a href="/about.md"><i class="fas fa-info-circle"></i> About</a>
        </menuitem>
        <menuitem>
            <a href="/schedule"><i class="fas fa-calendar-alt"></i> Schedule</a>
        </menuitem>
        <menuitem>
            <a href="/join.md"><i class="fas fa-sign-in-alt"></i> Join</a>
        </menuitem>
        <menuitem>
            <a href="/volunteer.md"><i class="fas fa-users-cog"></i> Volunteer</a>
        </menuitem>
        <menuitem>
            <a href="/contact.md"><i class="far fa-address-card"></i> Contact Us</a>
        </menuitem>
        <menuitem>
            <a href="https://cub306.square.site/" target="_new">
                <i class="fab fa-squarespace"></i> Payments</a>
        </menuitem>
        <menuitem>
            <a href="https://www.facebook.com/CatonsvilleCub306" target="_new">
                <i class="fab fa-facebook"></i> Facebook</a>
			<!-- https://www.facebook.com/groups/1638534726165407/ -->
        </menuitem>
    </menu>
    <!--div id="construction">This site is under development</aside-->
</header>

<% if has_content("/alerts.md") %>
<aside>
    <div>Tools</div>
    <div>
        <%=inject "/alerts.md"%>
    </div>
</aside>
<% end %>

<main>
    <% if blog_exists %>
        <%=include blog_path "blog_before"%>
        <h2><i class="fas fa-bullhorn"></i> Announcements</h2>
        <section class="blog">
            <%=blog_here%>
        </section>
        <%=include blog_path "blog_after"%>
    <% else %>
        <%=include "page_before"%>
        <%=page%>
        <%=include "page_after"%>
    <% end %>
</main>

<br style="clear:both;">

<footer>
    <div id="foot_contact">
        About this site <a href="/site.md">software</a>.
        For more information contact the <a href="mailto:cubmaster@cub306.org">Cub Master</a>.
    </div>
    <div id="foot_copy">
        Copyright &copy; <%=DateTime.now.strftime("%Y")%> -
        Catonsville Cub Scout Pack 306. All rights reserved.
        Images of scouts can only be reused with permission!
    </div>

    <div id="foot_links">
        For our other sites, see
    <ul>
        <li>Cub Scout Pack 306 : <a href="https://cub306.org">Cub306.org</a></li>
        <li>Boys Troop 306 : <a target="_new" href="https://OurTroop306.org">OurTroop306.org</a></li>
        <li>Girls Troop 306 : <a target="_netw" href="https://Catonsville306.org">Catonsville306.org</a></li>
    </ul>
    </div>

    <br clear="both">
    <div id="footer_debug">
        <div id="ios8">iPhone 8 plus</div>
        <div id="iosSEland">iPhone SE - landscape</div>
        <div id="iosSEport">iPhone SE - portrait</div>
        <div id="iosOther">other</div>
    </div>
</footer>

</body>
</html>
